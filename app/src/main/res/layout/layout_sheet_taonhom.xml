<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_medium"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạo nhóm mới" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:layout_height="wrap_content"
        android:text="Tên nhóm" />

    <EditText
        android:id="@+id/edtTenNhom"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/montserrat_medium"
        android:inputType="text" />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:layout_height="wrap_content"
        android:text="Mô tả" />

    <EditText
        android:id="@+id/edtMoTa"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/montserrat_medium"
        android:inputType="text" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:fontFamily="@font/montserrat_medium"
        android:layout_height="wrap_content"
        android:text="Hình nền" />

    <Button
        android:id="@+id/btnChonHinhNen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="#2196F3"
        android:fontFamily="@font/montserrat_medium"
        android:text="Chọn ảnh" />

    <ImageView
        android:id="@+id/imgAnhNhom"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageButton
        android:id="@+id/btnTaoNhom"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:srcCompat="@drawable/btn_arraw1" />
</LinearLayout>